<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MUI.Controls.ImageViewport">
    <Style TargetType="{x:Type local:ImageViewport}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ImageViewport}">
                    <Grid
                        ClipToBounds="True"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <Border Background="{TemplateBinding Background}" />
                        <local:LayeredSurfaceHost x:Name="PART_SurfaceHost" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
