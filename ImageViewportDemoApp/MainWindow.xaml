
<Window
    x:Class="ImageViewportDemoApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mui="clr-namespace:MUI.Controls.ImageViewport;assembly=MUI.Controls.ImageViewport"
    Title="ImageViewport Demo"
    Width="1100"
    Height="720"
    Background="#202428">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="视图">
                <MenuItem
                    Name="RulerMenuItem"
                    Click="ToggleRuler_Click"
                    Header="显示标尺"
                    IsChecked="True" />
                <MenuItem
                    Name="HUDMenuItem"
                    Click="ToggleHUD_Click"
                    Header="显示HUD"
                    IsCheckable="True" />
                <MenuItem
                    Name="MeasureMenuItem"
                    Click="ToggleMeasure_Click"
                    Header="显示测量层"
                    IsCheckable="True" />
            </MenuItem>
            <MenuItem Header="设置">
                <MenuItem
                    Name="UseLeftPanItem"
                    Click="UseLeftPan_Click"
                    Header="左键平移"
                    IsChecked="True" />
                <MenuItem
                    Name="UseMiddlePanItem"
                    Click="UseMiddlePan_Click"
                    Header="中键平移" />
                <MenuItem
                    Name="UseRightPanItem"
                    Click="UseRightPan_Click"
                    Header="右键平移" />
            </MenuItem>
        </Menu>
        <mui:ImageViewport x:Name="Viewport" Background="#101215" />
    </DockPanel>
</Window>
