<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:UI.Controls.ImageViewport">

    <Style TargetType="{x:Type c:ImageViewport}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:ImageViewport}">
                    <Grid
                        ClipToBounds="True"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <!--  背景在下  -->
                        <Border Background="{TemplateBinding Background}" />
                        <!--  绘制宿主在上（必须命名为 PART_SurfaceHost）  -->
                        <c:LayeredSurfaceHost x:Name="PART_SurfaceHost" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
